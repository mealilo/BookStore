@page "/admin/books/details/{id:long}"

@*// this page shows all of the book details based on a param passed thorugh the url*@
<h3>Book Details</h3>

<table class="table table-sm table-bordered table-striped table-dark table-hover">

    <tbody>


        <tr>
            <th>ID</th>
            <td>@book.BookId</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>@book.Title</td>
        </tr>
        <tr>
            <th>Author</th>
            <td>@book.Author</td>
        </tr>
        <tr>
            <th>Publisher</th>
            <td>@book.Publisher</td>
        </tr>
        <tr>
            <th>ISBN</th>
            <td>@book.Isbn</td>
        </tr>
        <tr>
            <th>Classification</th>
            <td>@book.Category</td>
        </tr>

        <tr>
            <th>Page Count</th>
            <td>@book.PageCount</td>
        </tr>

        <tr>
            <th>Price</th>
            <td>@book.Price</td>
        </tr>


    </tbody>
</table>

<NavLink class="btn btn-warming" href="@EditUrl">Edit</NavLink>
<NavLink class="btn btn-secondary" href="/admin">Back</NavLink>
@code {
    [Inject]
    public IBookRepository repo { get; set; }
    [Parameter]
    public long Id { get; set; }
    public Book book { get; set; }
    protected override void OnParametersSet()
    {
        book = repo.Books.FirstOrDefault(x => x.BookId == Id);
    }

    public string EditUrl => $"/admin/books/edit/{book.BookId}";
}