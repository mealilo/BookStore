@inherits LayoutComponentBase


@*This is where the layout for all the admin pages is set*@
<div class="bg-info text-white" p-2>
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <span class="navbar-brand m-lg-2">Bookstore</span>
            </div>
            <div class="col-2 text-right">
                <a class="btn btn-sm btn-primary" href="/account/logout">Log out</a>
            </div>
        </div>
    </div>
</div>

<div class="container text-center m-auto">
    <div class="row p-2 d-grid">
        <div class="col-3">
            <NavLink class="btn btn-outline-primary" href="/admin/allbooks" ActiveClass="btn-primary text-white" Match="NavLinkMatch.Prefix">All Books</NavLink>
            <NavLink class="btn btn-outline-primary" href="/admin/orders" ActiveClass="btn btn-primary" Match="NavLinkMatch.Prefix">Orders</NavLink>
        </div>

        <div class="col">
            @Body
        </div>
    </div>
</div>