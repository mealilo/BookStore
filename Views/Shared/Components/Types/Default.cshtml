@{ 


    
    //This page creates a component view that will be used for filtering in a nav bar
}

@model IEnumerable<string>


<div class="d-grid gap-2">

    <a asp-controller="Home" asp-action="Index" asp-route-bookType="" asp-route-pageNum="" class="btn btn-secondary">All books</a>

    @foreach (string type in Model)
    {
        <br />
        <a asp-controller="Home" asp-action="Index" asp-route-bookType="@type" asp-route-pageNum="1" class="btn @(ViewBag.SelectedType == type ? " btn-primary" : "btn-outline-secondary" )">@type</a>
    }

</div>